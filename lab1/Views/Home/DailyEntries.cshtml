<div class="text-center">
    <h1 class="display-4">Activities for @Model.SelectedDate</h1>
    <form>
        <p>Change preview date</p>
        <input type="date" name="date" onchange="this.form.submit()">
    </form>
    <table style="width: 100%">
        <tr>
            <th style="width: 20%">Date</th>
            <th style="width: 10%">Project</th>
            <th style="width: 10%">Sub-project</th>
            <th style="width: 10%">Time [min]</th>
            <th style="width: 40%">Description</th>
            <th style="width: 10%">Options</th>
        </tr>
        @foreach (var entry in Model.Entries) {
            <tr>
                <td>@entry.date.ToShortDateString()</td>
                <td>@entry.code</td>
                <td>@entry.subcode</td>
                <td>@entry.time</td>
                <td>@entry.description</td>
                <td>
                    <p style="font-size: 0">
                    <button style="display: inline-block; border: none; background-color: transparent"><i class="material-icons">info</i></button>
                    <button style="display: inline-block; border: none; background-color: transparent"><i class="material-icons">settings</i></button>
                    <button style="display: inline-block; border: none; background-color: transparent"><i class="material-icons">delete</i></button>
                    </p>
                </td>
            </tr>
        }
        <tr style="font-size: 0">
            <td colspan=6><button style="display: inline-block; border: none; background-color: transparent" onclick="window.location.href = './AddEntry'"><i class="material-icons">add_circle</i></button></td>
        </tr>
    </table>
    <label>Total time: @Model.TotalTime</label>
</div>
